# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/recruiter_agent_dev
REDIS_URL=redis://localhost:6379

# External API Keys (fill these in)
# GitHub Token - Get from: https://github.com/settings/tokens
# Required scopes: read:user, repo (for public repos)
GITHUB_TOKEN=your_github_personal_access_token_here

# SerpAPI Key - Get from: https://serpapi.com/ (for LinkedIn search fallback)
SERPAPI_KEY=your_serpapi_key_here

# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Service Configuration
DEBUG=true
LOG_LEVEL=DEBUG

# File Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=resume-files

# Security
JWT_SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_PREFIX=ra_

# Processing Limits
MAX_FILE_SIZE_MB=5
MAX_CONCURRENT_UPLOADS=10
PROCESSING_TIMEOUT_SECONDS=60

# Narrative Engine Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4
MAX_TOKENS=2000
TEMPERATURE=0.7
NARRATIVE_STYLE=comprehensive

# Service URLs (internal communication)
DATA_ENRICHMENT_URL=http://localhost:8002
PROFILE_DISCOVERY_URL=http://localhost:8001
RESUME_PARSER_URL=http://localhost:8000
NARRATIVE_ENGINE_URL=http://localhost:8003
